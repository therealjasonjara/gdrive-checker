{
  "manifest_version": 3,
  "name": "Google Drive File Checker",
  "version": "1.0",
  "description": "Checks filenames and dates in a Google Drive folder and exports data to CSV.",
  "permissions": ["scripting", "downloads", "activeTab"],
  "host_permissions": ["https://drive.google.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["content.js"],
      "matches": ["https://drive.google.com/*"]
    }
  ]
}
